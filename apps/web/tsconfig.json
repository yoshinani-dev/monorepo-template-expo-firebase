{
  "extends": "@yoshinani/style-guide/typescript/nextjs",
  "compilerOptions": {
    "paths": {
      "@repo/ui/*": ["../../packages/ui/src/*"],
      "@repo/features/*": ["../../packages/features/src/*"],
      "~/env": ["./env.ts"],
      "~/features/*": ["./features/*"],
      "~/lib/*": ["./lib/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "next.config.mjs",
    "postcss.config.mjs",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
